{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "*": ["src/types/*", "*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "setup.ts"]
}
